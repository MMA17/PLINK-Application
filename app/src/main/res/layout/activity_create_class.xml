<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateClassActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text="Tạo nhóm học"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_nameClass"
        android:layout_width="360dp"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Tên nhóm học"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.033"
        android:background="@drawable/border"/>

    <EditText
        android:id="@+id/edtDes"
        android:layout_width="360dp"
        android:layout_height="268dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Mô tả nhóm học"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nameClass"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/tv_user"
        android:layout_width="360dp"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Tên hoặc số điện thoại"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDes"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/btnCreateClass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="TẠO NHÓM"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user"
        app:layout_constraintVertical_bias="0.837" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white_dark"
    tools:context=".HomeActivity">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:stretchColumns="1">
        <TableRow>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:src="@drawable/profile"
                android:padding="8dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white" />
            <ImageView
                android:src="@drawable/bell32"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                />
        </TableRow>
        <TableRow>

            <TextView
                android:fontFamily="@font/merriweather_light"
                android:text="PLINK"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/light_gray"
                />
        </TableRow>

    </TableLayout>
    <ListView
        android:id="@+id/lv_class"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_below="@+id/table_layout"
        android:layout_width="359dp"
        android:layout_height="566dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:divider="#fff"
        android:dividerHeight="40dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_class"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/plus2"
        app:backgroundTint="@color/white_dark"
        app:fabSize="normal" />
</RelativeLayout>
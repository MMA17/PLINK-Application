<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white_dark"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        app:navigationIcon="@drawable/vector"
        app:titleTextAppearance="@font/merriweather_bold"
        app:titleTextColor="@color/orange">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/subTitle"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_bold"
        android:text="PLINK"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="28dp" />
    <TextView
        android:id="@+id/txtHomeActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ABCCCCCC"
        android:layout_below="@+id/subTitle"
        android:textSize="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        />
    <ListView
        android:id="@+id/lv_class"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:divider="#fff"
        android:dividerHeight="40dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        app:backgroundTint="@color/white_dark"
        app:fabSize="normal" />

    <TextView
        android:id="@+id/textview_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="84dp"
        android:padding="8dp"
        android:background="@color/white"
        android:textColor="#F39A2F"
        android:text="Tạo Nhóm"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/plus2"
        android:background="@color/dark_gray"
        app:backgroundTint="@color/white_dark"
        app:fabSize="mini"
        />
    <TextView
        android:id="@+id/textview_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="152dp"
        android:padding="8dp"
        android:background="@color/white"
        android:textColor="#F39A2F"
        android:text="Vào Nhóm"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/ic_baseline_group_24"
        app:backgroundTint="@color/white_dark"
        app:fabSize="mini" />

</RelativeLayout>
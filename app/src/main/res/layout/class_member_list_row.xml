        android:layout_marginStart="328dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/list_item_textView"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_highlight_off_24"
